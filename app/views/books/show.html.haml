%h1= @book.title

.row
  .col-md-4
    = image_tag "#{@book.slug}-352x500.jpg"
  .col-md-6
    %dl.row
      %dt.col-md-2 Title
      %dd.col-md-10= @book.title
      %dt.col-md-2 Author
      %dd.col-md-10= @book.author
      %dt.col-md-2 Description
      %dd.col-md-10= @book.description.html_safe
      %dt.col-md-2 Pages
      %dd.col-md-10= @book.pages
      %dt.col-md-2 Medium
      %dd.col-md-10= t_enum @book, :medium